{
  "name": "rifastatus-functions",
  "description": "Cloud Functions para o sistema RifaStatus",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "18"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^11.8.0",
    "firebase-functions": "^4.3.1",
    "mercadopago": "^1.5.17",
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "typescript": "^4.9.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17"
  },
  "private": true
}
